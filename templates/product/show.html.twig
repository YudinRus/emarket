{% extends 'base.html.twig' %}

{% block title %}Продукт{% endblock %}

{% block body %}
    <h1>Продукт</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ product.info }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>IsAvailable</th>
                <td>{{ product.isAvailable ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="container-fluid">
        <button type="button" class="btn btn-secondary"><a href="{{ path('product_index') }}" style="color: black">back to list</a></button>
    </div>

    <div class="container-fluid">
        <button type="button" class="btn btn-secondary"><a href="{{ path('product_edit', {'id': product.id}) }}" style="color: black">edit</a></button>
    </div>

    <div class="container-fluid">
    {{ include('product/_delete_form.html.twig') }}
    </div>
{% endblock %}
