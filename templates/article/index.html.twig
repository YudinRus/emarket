{% extends 'base.html.twig' %}

{% block title %}Список статтей{% endblock %}

{% block body %}
    <div class="container-fluid">
    <h1>Список статтей</h1>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Short_title</th>
                <th>Title</th>
                <th>Date</th>
                <th>Text</th>
                <th>Author</th>
                <th>IsPublished</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.shortTitle }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.text }}</td>
                <td>{{ article.author }}</td>
                <td>{{ article.isPublished ? 'Yes' : 'No' }}</td>
                <td>
                    <button type="button" class="btn btn-warning"><a href="{{ path('article_show', {'id': article.id}) }}">Show</a></button>
                    <button type="button" class="btn btn-warning"><a href="{{ path('article_edit', {'id': article.id}) }}">Edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Нет записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="container-fluid">
    <button type="button" class="btn btn-primary"><a href="{{ path('article_new') }}" style="color: black">Create new</a></button>
    </div>
{% endblock %}
