{% extends 'base.html.twig' %}

{% block title %}Статья{% endblock %}

{% block body %}
    <div class="container-fluid">
    <h1>Статья</h1>
    </div>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Short_title</th>
                <td>{{ article.shortTitle }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ article.text }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ article.author }}</td>
            </tr>
            <tr>
                <th>IsPublished</th>
                <td>{{ article.isPublished ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="container-fluid">
        <button type="button" class="btn btn-secondary"><a href="{{ path('article_index') }}" style="color: black">Back to list</a></button>
    </div>

    <div class="container-fluid">
        <button type="button" class="btn btn-warning"><a href="{{ path('article_edit', {'id': article.id}) }}" style="color: black">Edit</a></button>
    </div>

    <div class="container-fluid">
        {{ include('article/_delete_form.html.twig') }}
    </div>
{% endblock %}
