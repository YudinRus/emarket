{{ form_start(form) }}
<div class="errors">
    {{ form_errors(form) }}
</div>

<div class="container">
    <div class="form-group row"
    {{ form_label(form.name, 'Название', {'label_attr': {'class': 'col-form-label'}}) }}
    {{ form_widget(form.name, {'attr': {'class': 'form-control'} }) }}
</div>
<div class="form-group row">
    {{ form_label(form.info, 'Инфо товара', {'label_attr': {'class': 'col-form-label'}}) }}
    {{ form_widget(form.info, {'attr': {'class': 'form-control'} }) }}
</div>
<div class="form-group row">
    {{ form_label(form.price, 'Цена', {'label_attr': {'class': 'col-form-label'}}) }}
    {{ form_widget(form.price, {'attr': {'class': 'form-control'} }) }}
</div>
<div class="form-group row">
    {{ form_label(form.isAvailable, 'Наличие', {'label_attr': {'class': 'col-form-label'}}) }}
    {{ form_widget(form.isAvailable, {'attr': {'class': 'form-control'} }) }}
</div>
<div class="form-group row">
    {{ form_label(form.category, 'Категория', {'label_attr': {'class': 'col-form-label'}}) }}
    {{ form_widget(form.category, {'attr': {'class': 'form-control'} }) }}
</div>
</div>
<button class="btn btn-success">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
