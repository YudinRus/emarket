{% extends 'base.html.twig' %}

{% block title %}Заказ{% endblock %}

{% block body %}
    <h1>Заказ</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ invoice.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ invoice.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ invoice.lastName }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ invoice.phoneNumber }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ invoice.createdAt ? invoice.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="container-fluid">
        <button type="button" class="btn btn-secondary"><a href="{{ path('invoice_index') }}" style="color: black">Back to list</a></button>
    </div>

    <div class="container-fluid">
    <button type="button" class="btn btn-secondary"><a href="{{ path('invoice_edit', {'id': invoice.id}) }}" style="color: black">Edit</a></button>
    </div>

    <div class="container-fluid">
    {{ include('invoice/_delete_form.html.twig') }}
    </div>
{% endblock %}
